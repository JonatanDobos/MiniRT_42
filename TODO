range verwijderd.
float	range(float value, float min, float max)
{
	if (value > max)
		return (max);
	if (value < min)
		return (min);
	return (value);
}
float	clamp(float value, float min, float max)
{
	if (value < min)
		return (min);
	if (value > max)
		return (max);
	return (value);
}
